<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.ForNative.Components.Form.LongTextInput" 
             xmlns:local="clr-namespace:Quiz.ForNative.Components.Form"
             x:Name="longTextInput">
    <local:BaseInput LabelText="{Binding LabelContent, Source={x:Reference longTextInput}}">
        <local:FormInput
                x:Name="Input"
                TypeInput="TextArea"
                Placeholder="{Binding PlaceholderContent, Source={x:Reference longTextInput}}"
                ValidationFunction="{Binding ValidationFunction, Source={x:Reference longTextInput}}"
                WidthRequest="250"/>
    </local:BaseInput>
</ContentView>
