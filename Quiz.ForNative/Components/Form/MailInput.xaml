<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.ForNative.Components.Form.MailInput"
             xmlns:local="clr-namespace:Quiz.ForNative.Components.Form"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="mailInput">
    <local:BaseInput LabelText="{Binding LabelContent, Source={x:Reference mailInput}}">
        <VerticalStackLayout>
            <Entry
            x:Uid=""
                x:Name="Input"
                Placeholder="{Binding PlaceholderContent, Source={x:Reference mailInput}}"
                WidthRequest="250"
                TextChanged="ValidateInput"/>
            <Label x:Name="Error" />
        </VerticalStackLayout>
    </local:BaseInput>
</ContentView>
