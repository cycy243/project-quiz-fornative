<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Quiz.ForNative.Components.Form.MailInput"
             xmlns:local="clr-namespace:Quiz.ForNative.Components.Form"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="mailInput">
    <local:BaseInput LabelText="{Binding LabelContent, Source={x:Reference mailInput}}">
        <local:FormInput
                x:Name="Input"
                TypeInput="Email"
                Placeholder="{Binding PlaceholderContent, Source={x:Reference mailInput}}"
                ValidationFunction="{Binding ValidationFunction, Source={x:Reference mailInput}}"
                WidthRequest="250"/>
    </local:BaseInput>
</ContentView>
